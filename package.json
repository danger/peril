    "express": "^4.13.4",
    "jest": "^19.0.2",
    "jsonwebtoken": "^7.2.1",
    "mongodb": "^2.2.25",
    "node-fetch": "^1.6.3",
    "ts-jest": "^19.0.0",
    "tslint": "^4.5.1",
    "typescript": "2.2.1",
    "typings": "^2.0.0",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.4"
  },
  "engines": {
    "node": "7.2.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/_tests/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
