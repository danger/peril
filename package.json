  "author": "Facebook",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "config": "^1.20.4",
    "danger": "^0.11.5",
    "ejs": "^2.4.2",
    "express": "^4.13.4",
    "jsonwebtoken": "^7.2.1",
    "mongodb": "^2.2.11",
    "mongojs": "orta/mongojs#module_import",
    "node-fetch": "^1.6.3",
    "typescript": "^2.1.4"
  },
  "engines": {
    "node": "7.2.1"
  },
  "devDependencies": {
