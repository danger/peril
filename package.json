{
  "name": "peril",
  "version": "0.0.1",
  "description": "Warning Danger! Danger!",
  "scripts": {
    "start": "node out/index.js",
    "compile": "tsc -watch -p ./",
    "build": "tsc",
    "type-check": "tsc --noEmit --pretty",
    "postinstall": "yarn build; if [ $DATABASE_JSON_FILE ]; then yarn run setup; fi",
    "test": "jest && tslint source/**/**/**.ts",
    "lint": " tslint source/**/**/**.ts",
    "generate:types:json": "ts-node source/scripts/json-types.ts && tslint source/**/*.ts --fix",
    "setup": "yarn run setup:plugins && yarn run setup:env",
    "setup:env": "node out/scripts/setup-env.js",
    "setup:plugins": "node out/scripts/setup-plugins.js",
    "docker:build:site": "docker build .",
    "docker:build:runner": "docker build -f Dockerfile.runner  -t runner .",
    "runner": "node out/runner/index.js",
    "precommit": "lint-staged; yarn build;",
    "postcommit": "yarn danger local --dangerfile dangerfile.lite.ts",
    "prepush": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danger/peril.git"
  },
  "author": "Orta",
  "license": "MIT",
  "availablePerilRuntimeDependencies": {
    "@slack/client": "3.15.0",
    "danger": "^3",
    "danger-plugin-spellcheck": "1.2.2",
    "danger-plugin-yarn": "1.2.1",
    "jira-client": "6.4.1",
    "lodash": "4.17.4",
    "semver-sort": "^0.0.4"
  },
  "dependencies": {
    "@octokit/rest": "^15.2.6",
    "@types/agenda": "^1.0.3",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^0.0.30",
    "@types/dotenv": "^4.0.3",
    "@types/ejs": "^2.5.1",
    "@types/express": "^4.11.1",
    "@types/get-stdin": "^5.0.1",
    "@types/glob": "^5.0.35",
    "@types/jest": "^22.2.3",
    "@types/json5": "^0.0.29",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/lodash": "^4.14.108",
    "@types/mongodb": "^3.0.15",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^9.6.6",
    "@types/node-cleanup": "^2.1.0",
    "@types/node-fetch": "^1.6.9",
    "@types/node-schedule": "^1.2.2",
    "@types/winston": "^2.3.9",
    "agenda": "^1.0.3",
    "apollo-server-express": "^1.3.6",
    "async-exit-hook": "^2.0.1",
    "babel-cli": "7.0.0-alpha.19",
    "babel-core": "7.0.0-alpha.19",
    "babel-plugin-syntax-async-functions": "7.0.0-alpha.19",
    "babel-plugin-transform-flow-strip-types": "7.0.0-alpha.19",
    "babel-plugin-transform-regenerator": "7.0.0-alpha.19",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "7.0.0-alpha.19",
    "babel-preset-stage-3": "7.0.0-alpha.19",
    "body-parser": "^1.18.2",
    "chalk": "^2.4.1",
    "cookie-parser": "^1.4.3",
    "danger": "^3.6.3",
    "danger-plugin-yarn": "^1.3.0",
    "dotenv": "^5.0.1",
    "ejs": "^2.5.9",
    "express": "^4.16.3",
    "express-x-hub": "^1.0.4",
    "get-stdin": "^6.0.0",
    "github-webhook-event-types": "^1.1.0",
    "glob": "^7.1.2",
    "graphql": "^0.13.2",
    "graphql-relay-tools": "^0.1.1",
    "graphql-resolvers": "^0.2.2",
    "graphql-tools": "^2.24.0",
    "graphql-tools-types": "^1.1.18",
    "graphql-yoga": "^1.8.5",
    "hyper-aws4": "^1.1.3",
    "jest": "^22.4.3",
    "json2ts": "orta/json2ts#ts-less",
    "json5": "^1.0.1",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "mongoose": "^5.0.16",
    "node-fetch": "2.1.2",
    "node-schedule": "^1.3.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "typings": "^2.1.1",
    "winston": "^2.4.2",
    "winston-papertrail": "^1.0.5"
  },
  "devDependencies": {
    "danger-plugin-spellcheck": "^1.2.2",
    "husky": "^0.14.0",
    "lint-staged": "^7.0.4",
    "mockingoose": "^2.9.1",
    "now-travis": "^1.2.0",
    "prettier": "^1.12.1",
    "tslint-config-prettier": "^1.12.0"
  },
  "engines": {
    "node": "9"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/_tests/.*.test.ts$)",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "roots": ["<rootDir>/source"],
    "modulePaths": ["<rootDir>/source"],
    "testEnvironment": "node",
    "setupFiles": ["./source/testing/setupScript.js"]
  },
  "lint-staged": {
    "*.json": ["yarn prettier --write", "git add"],
    "*.ts": ["tslint --fix", "yarn prettier --write", "git add"],
    "*test.ts": ["jest -u"],
    "*.md": ["yarn prettier --write", "git add"]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "proseWrap": "always"
  }
}
