{
  "name": "peril",
  "version": "0.0.1",
  "description": "Warning Danger! Danger!",
  "scripts": {
    "start": "node out/peril.js",
    "compile": "tsc -watch -p ./",
    "build": "yarn tsc",
    "postinstall": "yarn build; if [ $DATABASE_JSON_FILE ]; then yarn run setup:plugins; fi",
    "test": "jest && yarn lint",
    "lint": "tslint source/**/**/**.ts",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit --pretty",
    "types:json": "ts-node source/scripts/json-types.ts && tslint source/**/*.ts --fix",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120 ",
    "prettier-project": "npm run prettier-write -- 'source/**/*.{ts,tsx}'",
    "setup:plugins": "ts-node source/scripts/setup-plugins.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danger/peril.git"
  },
  "author": "Orta",
  "license": "MIT",
  "dependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/debug": "^0.0.30",
    "@types/ejs": "^2.3.33",
    "@types/express": "^4.0.34",
    "@types/jest": "^20.0.6",
    "@types/jsonwebtoken": "^7.1.33",
    "@types/node-fetch": "^1.6.6",
    "@types/pg": "^6.1.34",
    "@types/pg-promise": "^0.0.28",
    "@types/winston": "^2.3.0",
    "babel-cli": "~6.24.1",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-regenerator": "^6.22.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-3": "^6.22.0",
    "body-parser": "^1.15.2",
    "danger": "2.0.0-alpha.5",
    "dotenv": "^4.0.0",
    "ejs": "^2.4.2",
    "express": "^4.13.4",
    "express-x-hub": "^1.0.4",
    "glob": "^7.1.1",
    "jest": "^20.0.4",
    "json2ts": "orta/json2ts#ts-less",
    "jsonwebtoken": "^7.2.1",
    "node-fetch": "^1.6.3",
    "node-pg-migrate": "^2.7.0",
    "pg-promise": "^6.1.0",
    "ts-jest": "^20.0.10",
    "ts-node": "^3.0.2",
    "tslint": "^5.4.3",
    "typescript": "^2.3.2",
    "typings": "^2.0.0",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.4",
    "write-file-promise": "^1.0.0"
  },
  "engines": {
    "node": "7.10.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/_tests/.*.test.ts$)",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "danger-plugin-yarn": "^0.2.10",
    "prettier": "^1.5.2",
    "tslint-config-prettier": "^1.1.0"
  }
}
